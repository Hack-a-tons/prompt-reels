# Server Configuration
PORT=15000
NODE_ENV=development
DOMAIN=reels.hurated.com

# AI Provider: 'azure' or 'gemini'
# Switch between providers as needed, system will remember last successful provider
AI_PROVIDER=azure

# Google Gemini API
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Weights & Biases (Weave)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=prompt-reels

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com
AZURE_API_VERSION=2025-01-01-preview
AZURE_DEPLOYMENT_NAME=gpt-4.1

# File Upload Configuration
MAX_FILE_SIZE=100000000
UPLOAD_DIR=./uploads

# Output Configuration
OUTPUT_DIR=./output
DATA_DIR=./data

# Video Processing
FRAMES_PER_SCENE=1
SCENE_DURATION_SECONDS=3

# Optional: Tavily API for reference text
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: BrowserBase for web scraping
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here
